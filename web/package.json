{
  "name": "water-forecast-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "clean": "rm -rf node_modules",
    "dev": "vite",
    "format": "npm run format:package && npm run format:prettier",
    "format:package": "sort-package-json",
    "format:prettier": "prettier --write .",
    "lint": "eslint .",
    "preview": "vite preview",
    "upgrade": "npx npm-check-updates -u && npm install",
    "upgrade:major": "npx npm-check-updates --target latest"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^9.30.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "sort-package-json": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "volta": {
    "node": "24.2.0"
  }
}
